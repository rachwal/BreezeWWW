@model IEnumerable<Breeze.SystemBuilder.Model.ISystemBuilderComponent>
@{
    ViewBag.Title = "Components";
    ViewBag.SubTitle = "List";
}

@section Menu {
    @Scripts.Render("~/Scripts/Components/Index/menu")
}

@Styles.Render("~/AdminLTE/plugins/icheck/css")

<div class="row">
    <div class="col-md-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <div class="box-tools pull-right"></div>
            </div>
            <div class="box-body no-padding">
                <div class="mailbox-controls">
                    <div class="btn-group">
                        <button type="button" class="btn btn-app checkbox-toggle ">
                            <i class="fa fa-square-o"></i>
                        </button>
                    </div>
                    <div class="btn-group">
                        <a href="@Url.Action("Add", "Components")" class="btn btn-app"><i class="fa fa-plus"></i>Add</a>
                        <a href="@Url.Action("Edit", "Components")" class="btn btn-app"><i class="fa fa-edit"></i>Edit</a>
                        <button type="button" class="btn btn-app">
                            <i class="fa fa-refresh" id="components-refresh"></i> Refresh
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-app">
                            <i class="fa fa-play"></i> Activate
                        </button>
                        <button type="button" class="btn btn-app">
                            <i class="fa fa-pause"></i> Pause
                        </button>
                        <button type="button" class="btn btn-app">
                            <i class="fa fa-repeat" id="components-restart"></i> Restart
                        </button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-app" id="components-remove-selected">
                            <i class="fa fa-trash-o"></i> Delete
                        </button>
                    </div>
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm">
                                <i class="fa fa-chevron-left"></i>
                            </button>
                            <button type="button" class="btn btn-default btn-sm">
                                <i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive mailbox-messages">
                    <table class="table table-hover table-striped">
                        <tbody>
                        @for (var i = 0; i < Model.Count(); i++)
                        {
                            var element = Model.ElementAt(i);
                            <tr>
                                <td>
                                    <input type="checkbox">
                                </td>
                                <td class="mailbox-star">
                                    <a href="#">
                                        <i class="fa fa-star text-yellow"></i>
                                    </a>
                                </td>
                                <td class="mailbox-name">
                                    <a href="#">@Model.ElementAt(i).Name</a>
                                </td>
                                <td class="mailbox-subject">@Model.ElementAt(i).BreezeId</td>
                                <td class="mailbox-attachment">
                                    <i class="fa fa-circle-o text-green"></i>
                                </td>
                                <td class="mailbox-date"></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/icheck/js")
    @Scripts.Render("~/AdminLTE/plugins/jquery-ui/js")
    @Scripts.Render("~/Scripts/Components/Index")
}